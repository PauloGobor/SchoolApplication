@{ 
    ViewBag.Title = "Universidade";
    

     
    
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery-3.3.1.min.js"></script>
    <script src="~/scripts/jquery.mask.min.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.bootstrap-growl.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary " style="position:fixed;width:100%;top:0;">
        @Html.ActionLink("Universidade", "Index", "Home", new { id = 0 }, new { @class = "navbar-brand" })
        @if (Request.IsAuthenticated)
        {
            @Html.ActionLink("Meus cursos", "MeusCursos", "Home", null, new { @class = "navbar-brand" })

        }

        <ul class="navbar-nav ml-auto">
            
            
            <li class="nav-item">
                @if (Request.IsAuthenticated)
                {
                    @User.Identity.Name
                    @Html.ActionLink("Logout", "Logout", "Usuario", null, new { @class = "nav-link active" })
                }
                else
                {
                    @Html.ActionLink("Login", "Login", "Usuario", null, new { @class = "nav-link active" })

                }


            </li>
            <li class="nav-item">
                <a href="~/Usuario/CadastrarUsuario" class="btn btn-outline-info " >
                    Cadastre-se
                </a>
            </li>
        </ul>
    </nav>

    <div id="conteudo" class="container" style="margin-top:110px;margin-bottom:15px">
        @RenderBody()
    </div>
    <footer>
        <hr />
        <p style="text-align:center">
            &copy; Desenvolvido por Paulo Eduardo Gobor - @DateTime.Now.Year
        </p>
    </footer>

</body>
</html>

<script>
    $(document).ready(function () {
        $(window).on("scroll", function () {
            if ($(window).scrollTop()) {
                $('.navbar').removeClass('static-top').addClass("fixed-top")
                //$('.navbar').hide();
                //$('.navbar').fadeIn('slow');
            } else {
                $('.navbar').removeClass('fixed-top').addClass("static-top")
            }

        });

    });
</script>
