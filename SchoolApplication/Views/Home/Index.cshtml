<div class="row" id="Cursos">
    @foreach (var item in Model)
    {
        <div class="col-sm-3" style="text-align:center; margin-bottom:30px">
            <img src="~/Imagens/@item.Imagem"
                 style="width:250px;height:200px;margin-bottom:5px"
                 alt="@item.Descricao"
                 class="img-thumbnail" /><br />
            @Html.ActionLink(item.Nome, "DetalhesCurso", "Home", new { id = item.CursoId }, null)<br />
            <b>Preço: </b> @item.Valor.ToString("C2")<br />
            @Html.ActionLink("Matricule-se", "Inscricao", "Home",
            new { id = item.CursoId }, new { @class = "btn btn-info" })
        </div>
    }
</div>


