@using SchoolApplication.Models
@model List<Curso>

@{
    List<Categoria> categorias = ViewBag.Categorias;
    // List<Modalidade> modalidades = ViewBag.Modalidades;
}



<div id="Categorias" style="margin-bottom:30px">
    <ol class="breadcrumb">
        <h5>Categorias:</h5> @foreach (var item in categorias)
            {
            <li class="breadcrumb-item" style="font-size:15px">
                @Html.ActionLink(item.Nome, "Index", "Home",
                        new { id = item.CategoriaId }, null)
            </li>
        }
    </ol>
</div>


