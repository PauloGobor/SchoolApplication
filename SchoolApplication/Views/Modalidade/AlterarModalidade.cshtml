@using SchoolApplication.Models
@model Modalidade
@{

    Layout = "~/Views/Shared/_LayoutAdm.cshtml";

}

@using (Html.BeginForm("AlterarModalidade", "Modalidade", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <legend>Cadastrar Modalidade</legend>

        @Html.HiddenFor(model => model.ModalidadeId)

        <div id="Nome" class="form-group">
            @Html.LabelFor(model => model.Nome, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Nome,
                        new
                        {
                            @class = "form-control",
                            @placeholder = "Nome do Turno",
                            @style = "width:50%"
                        })
            </div>
        </div>

        <div id="Descricao" class="form-group">
            @Html.LabelFor(model => model.Descricao, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.Descricao, new
           {
               @class = "form-control",
               @placeholder = "Digite a descricao da modalidade aqui...",

               @rows = "7"
           })
                @Html.ValidationMessageFor(model => model.Descricao, null, new { @class = "text-danger" })
            </div>
        </div>



        <div id="Button" class="col-sm-11">
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Alterar" />
            </div>
        </div>
    </fieldset>
}


