@using SchoolApplication.Models
@model List<Modalidade>

@{
    DateTime data = ViewBag.Data;
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";


}


<h2 style="margin-bottom:15px">Gerenciamento de Modalidades</h2>
@Html.ActionLink("Cadastrar Modalidade", "CadastrarModalidade", "Modalidade", new { @class = "btn btn-outline-info " })



<table class="table table-hover table-striped" style="margin-top:20px;margin-bottom:15px">
    <tr>
        <th>Nome</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (Modalidade item in Model)
            {
        <tr>
            <td>@item.Nome</td>
            <td>
                @Html.ActionLink("Remover", "Remover", "Modalidade", new { id = item.ModalidadeId }, new { @class = "btn btn-danger" })
            </td>
            <td>
                @Html.ActionLink("Alterar", "AlterarModalidade", "Modalidade", new { id = item.ModalidadeId }, new { @class = "btn btn-warning" })
            </td>
        </tr>
    }
</table>

<b>Dados atualizados: </b> @data
